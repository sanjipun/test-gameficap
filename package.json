{
  "name": "gameficap",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export -o build",
    "build-assets-path": "replace-in-files --string \"/assets\" --replacement \"./assets\" build",
    "start": "next start",
    "tsc-node": "tsc -p tsconfig.json",
    "lint:js": "eslint src --ext .ts --ext .tsx --fix",
    "lint": "npm run tsc-node && npm run lint:js",
    "buildstart": "yarn build && yarn start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tsc-node && lint-staged"
    }
  },
  "lint-staged": {
    "{**/*,*}.{json,css,md}": [
      "prettier --write"
    ],
    "{**/*,*}.{ts,tsx,js,jsx}": [
      "eslint .eslintrc.js --fix --max-warnings=-1",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.5.8",
    "apollo-boost": "^0.4.9",
    "dotenv": "^16.0.0",
    "graphql": "^16.3.0",
    "next": "12.0.9",
    "nextjs-progressbar": "^0.0.13",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-html-parser": "^2.0.2",
    "react-slick": "^0.28.1",
    "recharts": "^2.1.9",
    "slick-carousel": "^1.8.1",
    "web3modal": "^1.9.5",
    "zustand": "^3.6.9"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/jest": "^27.4.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "17.0.13",
    "@types/react": "17.0.38",
    "@types/react-html-parser": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "autoprefixer": "^10.4.2",
    "chai": "^4.3.6",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.8.3",
    "hardhat-gas-reporter": "^1.0.7",
    "husky": "^7.0.4",
    "mocha": "^9.2.1",
    "postcss": "^8.4.5",
    "react-icons": "^4.3.1",
    "solidity-coverage": "^0.7.18",
    "standardx": "3.0.0",
    "tailwindcss": "^3.0.18",
    "ts-node": "^10.4.0",
    "typechain": "^7.0.0",
    "typescript": "4.5.5"
  }
}
